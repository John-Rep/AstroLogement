{% extends 'base.html.twig' %}

{% block title %}Messagerie{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/messagerie.css') }}">
{% endblock %}

{% block body %}

<div class="retour">
    <a href="{{ path('app_message_home') }}" class="back-button">‚Üê Retour</a>
</div>

<div class="stars-background">
    {% for i in 0..80 %}
        <div class="star" style="top: {{ random(0,100) }}%; left: {{ random(0,100) }}%; animation-delay: {{ random(0,2000) }}ms;"></div>
    {% endfor %}
</div>

<h2>Conversation avec {{ receiver }}</h2>

<div id="messages-container">
    <div id="messages-list">
        {% include 'message/_messages.html.twig' %}
    </div>
</div>

{{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}
    <label for="image-upload" class="image-upload-label">üìé</label>
    <input type="file" id="image-upload" name="image" />
    {{ form_widget(form.contenu, {'attr': {'placeholder': '√âcris ton message ici...'}}) }}
    <button type="submit">Envoyer</button>
{{ form_end(form) }}

<script>
    const scrollToBottom = () => {
        const container = document.getElementById('messages-container');
        container.scrollTop = container.scrollHeight;
    };

    const refreshMessages = () => {
        fetch('{{ path("app_messages_refresh", {"id": receiver.id}) }}')
            .then(response => response.text())
            .then(html => {
                document.getElementById('messages-list').innerHTML = html;
                scrollToBottom();
            });
    };

    scrollToBottom(); // au chargement
    setInterval(refreshMessages, 2500);
</script>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const textarea = document.querySelector('textarea');
        const form = document.querySelector('form');

        textarea.addEventListener('keydown', (e) => {
            if (e.key === 'Enter' && !e.shiftKey) {
                e.preventDefault();
                form.submit();
            }
        });
    });
</script>

{% endblock %}
