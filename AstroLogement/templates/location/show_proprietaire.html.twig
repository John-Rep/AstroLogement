{% extends 'base.html.twig' %}

{% block title %}Location{% endblock %}

{% block body %}

    <h1>Location - Vue de Propri√©taire</h1>

    {{ include('location/_location.html.twig') }}

    <a href="{{ path('app_location_index') }}">back to list</a>

    <a href="{{ path('app_location_edit', {'id': location.id}) }}">edit</a>

    {{ include('location/_delete_form.html.twig') }}

<h1>Reservations de cette location</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Confirm</th>
                <th>Debut</th>
                <th>Fin</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reservation in location.reservations %}
            <tr>
                <td>{{ reservation.id }}</td>
                <td>{{ reservation.confirm ? 'Yes' : 'No' }}</td>
                <td>{{ reservation.debut ? reservation.debut|date('Y-m-d') : '' }}</td>
                <td>{{ reservation.fin ? reservation.fin|date('Y-m-d') : '' }}</td>
                <td>
                    {{ reservation.confirm ? '' : "{{ include('reservation/_accept_form.html.twig') }}" }}
                    {{ include('reservation/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
