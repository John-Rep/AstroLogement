
{% extends 'base.html.twig' %}



{% block title %}Explorations disponibles{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/locations.css') }}">
    <link rel="stylesheet" href="{{ asset('css/search.css') }}">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
{% endblock %}

{% block body %}
    <h1 class="text-center">Location index</h1>

    <div class="search-container">
        <form method="get" action="{{ path('app_location_index') }}">
            <input type="text" id="planete" name="planete" value="{{ planete }}" placeholder="Rechercher une destination...">
            <button type="submit">
                <i class="fas fa-search"></i> <!-- Icône loupe -->
            </button>
        </form>
    </div>

 {% for location in locations %}
        <div class="location-card">
            <div class="card-image">
                {% if location.photos|length > 0 %}
                    <img src="{{ asset(location.photos[0]) }}" alt="Photo de {{ location.titre }}">
                {% else %}
                    <img src="{{ asset('images/default.jpg') }}" alt="Image par défaut">
                {% endif %}
                <span class="heart">♡</span>
            </div>
            <div class="card-body">
                <div class="card-header">
                    <strong>{{ location.titre }}, {{ location.planete }}</strong>
                    <span class="rating">★ {{ location.moyenneAvis ?? '4.2' }}</span>
                </div>
                <div class="card-host">
                    Hôte :
                    {{ location.user.prenom ?? 'Inconnu' }}
                    {{ location.user.nom ?? '' }}
                    ({{ location.user.email }})
                </div>

                <div class="card-price">{{ location.cout }} $ par nuit</div>
                <div class="card-actions">
                    <a href="{{ path('app_location_show', {'id': location.id}) }}">Voir</a>
                    <a href="{{ path('app_location_edit', {'id': location.id}) }}">Modifier</a>
                </div>
            </div>
        </div>
    {% else %}
        <p>Aucune location disponible pour le moment.</p>
    {% endfor %}
</div>

<a href="{{ path('app_location_new') }}" class="btn-create">Créer une nouvelle location</a>
{% endblock %}