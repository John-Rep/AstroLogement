{% extends 'base.html.twig' %}

{% block title %}Location index{% endblock %}

{% block body %}
    <h1>Location index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Photos</th>
                <th>Planete</th>
                <th>Zone</th>
                <th>MaxVoyageurs</th>
                <th>Cout</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for location in locations %}
            <tr>
                <td>{{ location.id }}</td>
                <td>{{ location.titre }}</td>
                <td>{{ location.description }}</td>
                <td>{{ location.photos ? location.photos|join(', ') : '' }}</td>
                <td>{{ location.planete }}</td>
                <td>{{ location.zone }}</td>
                <td>{{ location.maxVoyageurs }}</td>
                <td>{{ location.cout }}</td>
                <td>
                    <a href="{{ path('app_location_show', {'id': location.id}) }}">show</a>
                    <a href="{{ path('app_location_edit', {'id': location.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_location_new') }}">Create new</a>
{% endblock %}
