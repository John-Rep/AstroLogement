{% extends 'base.html.twig' %}

{% block title %}New Location{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/newlocation.css') }}">
{% endblock %}

{% block body %}
    <div class="location-form-container">
        <div class="location-form-box">
            <h1 class="form-title">Create New Location</h1>

            {{ form_start(form) }}
                
                <div class="form-group">
                    {{ form_label(form.titre) }}
                    {{ form_widget(form.titre, {'attr': {'class': 'location-input'}}) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.description) }}
                    {{ form_widget(form.description, {'attr': {'class': 'location-input'}}) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.planete) }}
                    {{ form_widget(form.planete, {'attr': {'class': 'location-input'}}) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.zone) }}
                    {{ form_widget(form.zone, {'attr': {'class': 'location-input'}}) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.maxVoyageurs) }}
                    {{ form_widget(form.maxVoyageurs, {'attr': {'class': 'location-input'}}) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.cout) }}
                    {{ form_widget(form.cout, {'attr': {'class': 'location-input'}}) }}
                </div>

                <button class="location-btn" type="submit">Submit</button>

            {{ form_end(form) }}

            <a class="back-link" href="{{ path('app_location_index') }}">Back to list</a>
        </div>
    </div>
{% endblock %}
